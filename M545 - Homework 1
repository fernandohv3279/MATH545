\section{Strauss Section 1.2} 

\subsection{Exercise 1. Solve the first-order equation $2u_t+3u_x=0$ with the auxiliary condition $u=\sin{x}$ when $t=0$.}
   
\begin{solution} 
This is a constant coefficient equation with $a=2$ and $b=3$. Using the Change of Coordinates Method, we define
\begin{align*}
    &t' = 2t + 3x \text{ ; } 
    &x' = 3t - 2x \text{.}\\
\end{align*}
Then
\begin{align*}
    & u_t = 2u_{t'} + 3u_{x'} \text{ ; }
    & u_x = 3u_{t'} - 2u_{x'} \text{.}\\
\end{align*}
Hence 
\begin{align*}
    2u_t+3u_x = 2\left( 2u_{t'} + 3u_{x'} \right) +3\left( 3u_{t'} - 2u_{x'}\right)
    =\left(2^2+3^2\right)u_{t'} &= 0 \\
    u_{t'} &= 0 \\
    u_t &= f\left(x'\right) \text{.}\\
\end{align*}
The general solution is $$\underline{u_t = f\left(3t-2x\right)}\text{.}$$
When $t=0$, $u_0 = f\left(-2x\right) = \sin{x}$.  Letting $w=-2x$ (so that $x=\frac{-w}{2}$), we have 
$f\left(w\right)=\sin{\frac{-w}{2}}$.  Therefore, the exact solution is

$$ \boxed{u\left(t,x\right) = \sin{x-\frac{3}{2}t}}  \text{    } \checkmark  $$
\end{solution}

\subsection{Exercise 2. Solve the equation $3u_y+ u_{xy} = 0$. (\emph{Hint}: Let $v=u_y$.)}
   
\begin{solution} 
The challenge in this problem is the mixed second-order partial.  The hint shows us to remove it as an obstacle by using $v=u_y$ so that $\int_{}^{}vdv = u_y$. This will allow us to regard it as fixed for purposes of solving the PDE. This gives us a first-order equation linear equation with constant coefficients.
\begin{align*}
    &3u_y + u_{xy} = 0 \\
    &3v + \frac{\partial{v}}{\partial{x}} = 0 \\
    &3v + v' = 0 \\
    & \text{thus} \\
    &\underline{v = f\left(y\right)e^{-3x}} \text{ where } f\left(y\right) \text{ is a constant function.}\\
\end{align*}
But $v$  is a derivative in $y$, so we can just integrate with respect to $y$, then again with respect to $x$, to find the general solution.
\begin{align*}
    &v = f\left(y\right)e^{-3x} \\
    &\int_{}^{}u_y dy = e^{-3x}\int_{}^{}f\left(y\right)dy \\
    &\boxed{u\left(x,y\right) = F\left(y\right)e^{-3x} + G\left(x\right)} && \checkmark \\
\end{align*}

\end{solution}


\subsection{Exercise 6. Solve the equation $\sqrt{1-x^2}u_x+ u_y=0$ with the condition $u\left(0,y\right)=y$.}
   
\begin{solution} 
This is a variable coefficient first order equation. The characteristic curves satisfy the ODE 
\begin{align*}
    & \frac{dy}{dx}=\frac{1}{\sqrt{1-x^2}} \\
    & y = \arcsin{x} + C \\
    & \text{and} \\
    & C = y - \arcsin{x} \\
\end{align*} 
The solution will be constant on each of these characteristic line curves.  Therefore, the general solution is 
$$\underline{u\left(x,y\right) = f\left(y - \arcsin{x}\right)}\cdot$$
\\
To find the exact solution, we walk backward along the characteristic to $u\left(0,y\right)=y$. 

$$u\left(0,y\right) = f\left(y - \arcsin{0}\right) = f\left(y\right)$$
so that $f\left(y\right) = y$. 
\\
Therefore $$\boxed{u\left(x,y\right) = y - \arcsin{x}} \text{    } \checkmark$$
\end{solution}


\subsection{Exercise 8. Solve $au_x + bu_y + cu = 0$.}
   
\begin{solution} 
This is a constant coefficient first order linear equation in three variables, perhaps for length, width, height or perhaps for latitude/longitude over time. It can be reduced to an ODE by extending the change of coordinates method so that $x$ and $y$ are replaced by $x' = ax + by$ and $y' = bx - ay$.  We can then substitute all of the derivatives of $x$ with derivatives of $x'$ and derivatives of $y$ with derivatives of $y'$ to reduce the problem down to an ODE. 
\begin{align*}
    &au_x + bu_y + cu = 0 \\
    &a\left(au_{x'}+bu_{y'}\right) + b\left(bu_{x'}-au_{y'}\right) + cu = 0 \\
    &\underline{(a^2 + b^2)u_{x'} + cu = 0} \\
\end{align*}

This is a separable ODE solved by
\begin{align*}
    &\frac{u_{x'}}{u} = \frac{-c}{a^2 + b^2} \\
    &\ln{u} = \frac{cu + k_1}{-\left(a^2 + b^2\right)} \text{ ,where $k_1$ is an arbitrary constant} \\
    &u = e^{\frac{cu + k_1}{-\left(a^2 + b^2\right)}}
\end{align*}
Thus, the general solution in term of $x'$ and $y'$ is 
$$u\left(x',y'\right) = f\left(y'\right)e^{\frac{-cu}{a^2 + b^2}} \text{ , where $f$ is an arbitrary function.} $$
Converting back to the original variables, the final general solution is
$$ \boxed{u\left(x,y\right) = f\left(bx-ay\right)e^{\frac{-cu}{a^2 + b^2}}} \text{   } \checkmark $$
\end{solution}

